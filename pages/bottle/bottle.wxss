/* fundation */
/*清除浮动*/
.clearfix:after {
    content: "";
    display: block;
    clear: both;
}
.clearfix {
    zoom: 1;
}
.fl {
    float: left;
}
.fr {
    float: right;
}




/* bottle.wxss */
.width {
    width: 300px;
    margin: 5px auto;

    font-family: Arial, Helvetica, sans-serif;
    font-size: 14px;
    color: #303133;
}

/* title */
.title {
    margin: 0 auto 10px auto;
    height: 25px;
}

.title-text {
    text-align: center;
    font-size: 18px;
    font-weight: 500;
    line-height: 25px;
}

/* introduction */
.intro {
    margin: 0 auto 15px;
    padding: 0 5px;
}

.intro-text {
    color: #909399;
    font-size: 14px;
    line-height: 25px;
    letter-spacing: 1px;
}

.bottle-area {
    margin: 10px auto;
}

/* bottle */
.bottle-model {
    width: 59px;
    height: 140px;
    padding: 0px 8px 5px;
    /* todo padding-left was adjusted */
}

.canvas {
    width: 59px;
    height: 108px;
    background-color: #f00;
}

.bottle-name {
    width: 55px;
    height: 28px;
    /* background-color: #ff0; */
    padding: 4px 2px 0 2px;
}

.bottle-name-text {
    font-size: 10px;
    color: #909399;
    letter-spacing: 1px;
    line-height: 14px;
    text-align: center;
}

/* button */
.btn-area {
    margin: 10px auto;
    height: 40px;
    padding-bottom: 30px;
}

.btn {
    height: 40px;
    width: 150px !important;
    background-color: #409EFF;
    color: #FFF;
    font-size: 16px;
    line-height: 24px;
}